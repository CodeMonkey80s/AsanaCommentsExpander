{
    "name": "Asana Comments Expander",
    "version": "1.0",
    "description": "Automatically expands all comments!",
    "permissions": ["https://app.asana.com/*", "activeTab"],
    "content_scripts": [
        {
          "matches": [
            "https://app.asana.com/*"
          ],
          "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon-48x48.png"
    },
    "icons": {
        "16": "icon-16x16.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
      },
    "manifest_version": 2
  }